{
    "extends": [
        "eslint:recommended",
        "standard",
        "standard-react"
    ],
    "rules": {
        "arrow-parens": [
            2,
            "as-needed",
            {
                "requireForBlockBody": true
            }
        ],
        "indent": [
            "error",
            4
        ],
        "space-before-function-paren": 0,
        "prefer-const": [
            "error",
            {
                "destructuring": "any",
                "ignoreReadBeforeAssign": false
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ]
    }
}